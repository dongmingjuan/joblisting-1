<div class="pull-right">
  <%= link_to("add a job", new_admin_job_path, class: "btn btn-default")%>
</div>
<br><br>
<table class="table table-bordered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job)%>
      <%= link_to(job.title, admin_job_path(job))%>
    </td>
    <td>
      <% if job.is_hidden %>
         <%= link_to("open", open_admin_job_path(job), method: :post )%>
      <% else %>
         <%= link_to("close", close_admin_job_path(job), method: :post)%>
      <% end %>
      <%= link_to("Edit", edit_admin_job_path(job))%>
      <%= link_to("Delete", admin_job_path(job), method: :delete, data: { confirm: "Are you sure?"})%>
    </td>
    <td>
      <%= job.created_at%>
    </td>
  </tr>
  <% end %>
</table>
