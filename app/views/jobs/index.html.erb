<p id="notice"><%= notice %></p>

<h1>Jobs</h1>
<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪资下限排序", jobs_path(order: "by_down_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(order: "by_upper_bound") ) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", jobs_path  ) %>

        </li>
    </ul>
</div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>String</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.string %></td>
        <td><%= job.description %></td>
        <td>
          <%= job.wage_down_bound %>
        </td>
        <td>
          <%= job.wage_upper_bound %>
        </td>
        <td>
          <%= job.created_at %>
        </td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
